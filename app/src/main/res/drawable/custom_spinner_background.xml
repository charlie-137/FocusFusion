<!-- res/drawable/background_transparent_white.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background with 75% transparent white -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#BFFFFFFF" /> <!-- 75% transparent white -->
        </shape>
    </item>

    <!-- Stroke for the TextInputLayout -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke
                android:width="1dp"
                android:color="@color/colorAccent" />
        </shape>
    </item>

</layer-list>
